<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.pctol.server.mapper.TeacherMapper">

    <select id="getAct" parameterType="com.example.pctol.pojo.DTO.ThSearchDTO" resultType="java.lang.Integer">
        select count(*)
        from teacher
        <where>
            <if test="account!=null">
                lower(account) like concat('%',lower(#{account}),'%')
            </if>
            <if test="name!=null">
                and  lower(name) like concat('%',lower(#{name}),'%')
            </if>
        </where>
    </select>
    <select id="pageGet" parameterType="com.example.pctol.pojo.DTO.ThSearchDTO" resultType="com.example.pctol.pojo.entity.Teacher">
        select account,name,email
        from teacher
        <where>
            <if test="thSearchDTO.account!=null">
                lower(account) like concat('%',lower(#{thSearchDTO.account}),'%')
            </if>
            <if test="thSearchDTO.name!=null">
                and  lower(name) like concat('%',lower(#{thSearchDTO.name}),'%')
            </if>
        </where>
        limit #{start},#{pageSize}
    </select>


</mapper>